alias ale='gedit ~/Bash/dotfiles/aliases'
alias alr='source ~/Bash/dotfiles/aliases'

alias reload='source ~/.bashrc'

alias c='clear'
alias n='nautilus .'
alias desk='cd ~/Desktop'
alias home='cd ~/'
alias flushdns='sudo /etc/init.d/nscd restart'

# Run Redcar in Ruby 1.9.2 
alias red='rvm use 1.9.2@redcar && redcar .'

# Gem
alias gi='gem install'

# Rails
alias ps='passenger start'
alias pse='passenger start -e production'
alias rs='rails s'
alias rse='rails s -e production'
alias rc='rails c'
alias rce='rails c production'

# Generator
alias rg='rails g'

# Rake tasks

# Routes
alias rr="rake routes"

# Database
alias dbm='rake db:migrate'
alias dbmr='rake db:migrate:reset'
alias dbmt='rake db:migrate:reset RAILS_ENV=test'
alias dbs='rake db:seed'
alias dbr='rake db:rollback'

# MongoDB
alias mongo='/home/tom/mongodb/bin/mongod'
alias mongot='/home/tom/mongodb/bin/mongo'

# Testing
alias iftest='bundle exec infinity_test --rails --rspec'
alias iftestotal='bundle exec infinity_test --rails --rspec --rubies=ree,1.9.2'

# Git
alias g='gitg .'
alias gs='git status'
alias gb='git branch'
alias gc='git commit -m'
alias go='git checkout'
alias gp='git push'
alias gpl='git pull'

# Webbynode (my hosting)
alias wnp='webbynode push'

# For my PHP related apps *shock*
alias apa='cd /var/www/'
alias apr='sudo /etc/init.d/apache2 restart'
alias aps='sudo /etc/init.d/apache2 start'
