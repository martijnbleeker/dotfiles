alias reload='source ~/.bash_login'

# Lazy me
alias c='clear'
alias n='nautilus .'
alias o='open .'
alias la='ls -la'
alias desk='cd ~/Desktop'
alias home='cd ~/'
alias pro='cd ~/projects/'
alias m='cd ~/machinery/'
alias 8='cd ~/80beans/'
alias flushdns='sudo /etc/init.d/nscd restart'

# Oh openssl on Mac..... There are no words
alias sslhack='echo "OpenSSL::SSL::VERIFY_PEER = OpenSSL::SSL::VERIFY_NONE" > config/initializers/opensslhack.rb'
alias sslremove='unlink config/initializers/opensslhack.rb'

# Rails
alias rs='be rails s'
alias rc='be rails c'

# Generator
alias rg='be rails g'

# Bundle executes
alias be='bundle exec'
alias ber='be rspec'
alias fs='be foreman start'
alias gu='be guard'
alias wa='be watchr ./Watchrfile'
alias thin='be thin start -p 3000'
alias thinp='be thin start -p'

# Rake tasks

# Routes
alias rr="be rake routes"

# Database
alias dbm='bundle exec rake db:migrate'
alias dbd='bundle exec rake db:drop'
alias dbmr='bundle exec rake db:migrate:reset'
alias dbmt='bundle exec rake db:migrate:reset RAILS_ENV=test'
alias dbs='bundle exec rake db:seed'
alias dbr='bundle exec rake db:rollback'

# Git
alias g='open -a gitx .'
alias gg='gitg .'
alias gr='git reset'
alias grh='git reset --hard HEAD'
alias gs='git status'
alias gb='git branch'
alias gc='git commit -m'
alias go='git checkout'
alias gp='git push'
alias gpl='git pull'

# For my PHP related apps *shock*
alias apa='cd /var/www/'
alias apr='sudo /etc/init.d/apache2 restart'
alias aps='sudo /etc/init.d/apache2 start'
alias apd='sudo /etc/init.d/apache2 stop'
