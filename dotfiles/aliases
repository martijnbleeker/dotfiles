alias ale='gedit ~/.bash_aliases'
alias alr='source ~/.bash_aliases'

alias n='nautilus .'
alias desk='cd ~/Desktop'
alias home='cd ~/'

alias red='redcar .'

# Gem
alias gi='gem install'

# Rails
alias rs='rails s'
alias rse='rails s production'
alias rc='rails c'
alias rce='rails c production'

# Generator
alias rg='rails g'

# Rake tasks

# Routes
alias rr="rake routes"

# Database
alias dbm='rake db:migrate'
alias dbmr='rake db:migrate:reset'
alias dbmt='rake db:migrate:reset RAILS_ENV=test'
alias dbs='rake db:seed'
alias dbr='rake db:rollback'

# Git
alias g='gitg .'
alias gs='git status'
alias gb='git branch'
alias gc='git commit -m'
alias gp='git push'
alias gpl='git pull'

# Webbynode (my hosting)
alias wnp='webbynode push'