alias reload='source ~/.bash_login'

# Lazy me
alias c='clear'
alias n='nautilus .'
alias o='open .'
alias la='ls -la'
alias desk='cd ~/Desktop'
alias home='cd ~/'
alias pro='cd ~/projects/'
alias flushdns='sudo /etc/init.d/nscd restart'

# Oh openssl on Mac..... There are no words
alias sslhack='echo "OpenSSL::SSL::VERIFY_PEER = OpenSSL::SSL::VERIFY_NONE" > config/initializers/opensslhack.rb'
alias sslremove='unlink config/initializers/opensslhack.rb'

# Run Redcar in Ruby 1.9.3 
alias red='rvm use 1.9.3@redcar && redcar .'

# Rails
alias ps='passenger start'
alias pse='passenger start -e production'
alias rs='rails s'
alias rse='rails s -e production'
alias rc='rails c'
alias rce='rails c production'

# Generator
alias rg='rails g'

# Bundle executes
alias be='bundle exec'
alias gu='bundle exec guard'
alias wa='bundle exec watchr ./Watchrfile'
alias thin='bundle exec thin start -p 3000'
alias thinp='bundle exec thin start -p'

# Rake tasks

# Routes
alias rr="rake routes"

# Database
